@page "/register"
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<h3>Register</h3>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        Registration failed.
    </div>
}

<EditForm Model="User" OnValidSubmit="ExecuteRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group mb-3">
        <label for="firstName">First Name</label>
        <InputText id="firstName" class="form-control" @bind-Value="User.FirstName" />
    </div>

    <div class="form-group mb-3">
        <label for="lastName">Last Name</label>
        <InputText id="lastName" class="form-control" @bind-Value="User.LastName" />
    </div>

    <div class="form-group mb-3">
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="User.Email" />
    </div>

    <div class="form-group mb-3">
        <label for="password">Password</label>
        <InputText type="password" id="password" class="form-control" @bind-Value="User.Password" />
    </div>

    <button type="submit" class="btn btn-primary" style="background-color: var(--accent);">Register</button>
</EditForm>

@code {
    private RegisterRequest User { get; set; } = new();
    private bool ShowAuthError { get; set; } = false;

    private async Task ExecuteRegister()
    {
        ShowAuthError = false;
        var result = await AuthService.Register(User);
        if (result)
        {
            NavigationManager.NavigateTo("/login");
        }
        else
        {
            ShowAuthError = true;
        }
    }
}
