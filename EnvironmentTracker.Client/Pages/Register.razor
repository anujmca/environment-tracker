@page "/register"
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="auth-card" style="max-width: 400px; margin: 4rem auto; padding: 2rem; background: var(--card-bg); border: 1px solid #334155; border-radius: 12px; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);">
    <h3 style="text-align: center; margin-bottom: 1.5rem;">Register</h3>

    @if (ShowAuthError)
    {
        <div class="alert alert-danger" role="alert" style="background-color: rgba(239, 68, 68, 0.1); color: var(--error); border: 1px solid var(--error); padding: 0.75rem; border-radius: 8px; margin-bottom: 1rem;">
            Registration failed.
        </div>
    }

    <EditForm Model="User" OnValidSubmit="ExecuteRegister">
        <DataAnnotationsValidator />
        <ValidationSummary style="color: var(--error); margin-bottom: 1rem;" />

        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="firstName" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary);">First Name</label>
            <InputText id="firstName" class="form-control" @bind-Value="User.FirstName" style="width: 100%; padding: 0.75rem 1rem; border-radius: 8px; border: 1px solid #334155; background: #0f172a; color: white;" />
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="lastName" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary);">Last Name</label>
            <InputText id="lastName" class="form-control" @bind-Value="User.LastName" style="width: 100%; padding: 0.75rem 1rem; border-radius: 8px; border: 1px solid #334155; background: #0f172a; color: white;" />
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            <label for="email" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary);">Email</label>
            <InputText id="email" class="form-control" @bind-Value="User.Email" style="width: 100%; padding: 0.75rem 1rem; border-radius: 8px; border: 1px solid #334155; background: #0f172a; color: white;" />
        </div>

        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label for="password" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary);">Password</label>
            <InputText type="password" id="password" class="form-control" @bind-Value="User.Password" style="width: 100%; padding: 0.75rem 1rem; border-radius: 8px; border: 1px solid #334155; background: #0f172a; color: white;" />
        </div>

        <button type="submit" style="width: 100%; padding: 0.75rem; border-radius: 8px; border: none; background: var(--accent); color: white; font-weight: 600; cursor: pointer; transition: opacity 0.2s;">Register</button>
        <div style="margin-top: 1rem; text-align: center;">
            <a href="login" style="color: var(--accent); text-decoration: none; font-size: 0.875rem;">Already have an account? Log in.</a>
        </div>
    </EditForm>
</div>

@code {
    private RegisterRequest User { get; set; } = new();
    private bool ShowAuthError { get; set; } = false;

    private async Task ExecuteRegister()
    {
        ShowAuthError = false;
        var result = await AuthService.Register(User);
        if (result)
        {
            NavigationManager.NavigateTo("/login");
        }
        else
        {
            ShowAuthError = true;
        }
    }
}
